@model FindingJobWeb.Models.Job

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<section id="joblist">
    <div class="content-header">
        <p>
            <h2>Chỉnh sửa</h2>
        </p>
    </div>
    <div class="joblist">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr class="mb-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.JobID)

            <div class="form-group row">
                <label for="Name" class="col-sm-2 col-form-label">Tên công việc:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Description" class="col-sm-2 col-form-label">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="Description" name="Description" rows="5">@Model.Description</textarea>
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Qualification" class="col-sm-2 col-form-label">Trình độ:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="Qualification" name="Qualification" rows="5">@Model.Qualification</textarea>
                    @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Experience" class="col-sm-2 col-form-label">Kinh nghiệm:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="Experience" name="Experience" rows="5">@Model.Experience</textarea>
                    @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Specialization" class="col-sm-2 col-form-label">Chuyên môn:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="Specialization" name="Specialization" rows="5">@Model.Specialization</textarea>
                    @Html.ValidationMessageFor(model => model.Specialization, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="LastDatetoApply" class="col-sm-2 col-form-label">Hạn chót ứng tuyển:</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="LastDatetoApply" name="LastDatetoApply" value="@Model.LastDatetoApply" />
                    @Html.ValidationMessageFor(model => model.LastDatetoApply, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <label for="Salary" class="col-sm-2 col-form-label">Lương:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Jobtype" class="col-sm-2 col-form-label">Loại công việc:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Jobtype, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Jobtype, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="CompanyID" class="col-sm-2 col-form-label">Thuộc công ty:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.CompanyID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CompanyID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label for="Address" class="col-sm-2 col-form-label">Địa chỉ:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="Address" name="Address" rows="5">@Model.Address</textarea>
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <label for="Location" class="col-sm-2 col-form-label">Vị trí:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Country" class="col-sm-2 col-form-label">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <label for="UserID" class="col-sm-2 col-form-label">UserID:</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    </div>
</section>
