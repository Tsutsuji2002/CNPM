@using FindingJobWeb.Models
@model FindingJobWeb.Models.BlogModel
@{
    ViewBag.Title = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
        
}
<!-- start banner Area -->
@Html.Action("BannerArea", "Blog", new { title = "Chi tiết bài viết" })
<!-- End banner Area -->
<!-- Start blog-posts Area -->
<section class="blog-posts-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 post-list blog-post-list">
                <div class="single-post">
                    <img class="img-fluid" src="~/Resource/blog/@Model.sImage" alt="">
                    <ul class="tags">
                        @foreach (var cate in Model.sCategoryName)
                        {
                            <li><a href="#">@cate</a></li>
                        }
                    </ul>
                    <a href="#">
                        <h1>
                            @Model.sTitle
                        </h1>
                    </a>
                    <div class="content-wrap">
                        <p>
                            <pre>@Model.sContent</pre>
                        </p>
                        <style>
                            pre {
                                font-family: "Poppins", sans-serif;
                                font-size: 14px;
                                white-space: pre-wrap;
                            }
                        </style>
                        </p>


                    </div>
                    <div class="bottom-meta">
                        <div class="user-details row align-items-center">
                            <div class="comment-wrap col-lg-6 col-sm-6">
                                <ul>
                                    <li><a href="#"><span class="lnr lnr-heart"></span> @Model.iLike Lượt thích</a></li>
                                    <li><a href="#"><span class="lnr lnr-bubble"></span> @Model.iComment. Bình luận</a></li>
                                </ul>
                            </div>
                            <div class="social-wrap col-lg-6">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                    <li><a href="#"><i class="fa fa-behance"></i></a></li>
                                </ul>

                            </div>
                        </div>
                    </div>

                    <!-- Start nav Area -->
                    <section class="nav-area pt-50 pb-100">
                        <div class="container">
                            <div class="row justify-content-between">
                                <div class="col-sm-6 nav-left justify-content-start d-flex">
                                    @if (Model.iId > 1)
                                    {
                                        var prevBlog = Url.Action("BlogDetails", "Blog", new { id = Model.iId - 1 });
                                        <div class="thumb">
                                            <a href="@prevBlog"><img src="~/Content/blog/prev.jpg" alt=""></a>
                                        </div>
                                        <div class="post-details">
                                            <p>Bài viết trước</p>
                                            <h4 class="text-uppercase"><a href="@prevBlog">prev</a></h4>
                                        </div>
                                    }
                                </div>
                                <div class="col-sm-6 nav-right justify-content-end d-flex">
                                    @{
                                        var nextBlog = Url.Action("BlogDetails", "Blog", new { id = Model.iId + 1 });
                                        <div class="post-details">
                                            <p>Bài viết sau</p>
                                            <h4 class="text-uppercase"><a href="@nextBlog">next</a></h4>
                                        </div>
                                        <div class="thumb">
                                            <a href="@nextBlog"><img src="~/Content/blog/next.jpg" alt=""></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- End nav Area -->
                    <!-- Start comment-sec Area -->
                    @Html.Action("ShowComments", "Blog", new { id = Model.iId });
                    <!-- End comment-sec Area -->
                    <!-- Start commentform Area -->
                    <section class="commentform-area pt-80">
                        <div class="container">
                            <h5 class="pb-50">Để lại bình luận</h5>
                            <div class="row flex-row d-flex">
                                <div class="col-lg-8 col-md-6">
                                    <form method="post" class="form-area contact-form text-right" action="@Url.Action("Comment", "Blog", new { id = Model.iId})">
                                        <textarea class="form-control mb-10" name="Content" placeholder="Nội dung bình luận" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nội dung bình luận'" required=""></textarea>
                                        <button type="submit" class="primary-btn mt-20 text-white" style="float: right;">Gửi</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- End commentform Area -->


                </div>
            </div>
            <div class="col-lg-4 sidebar">
                <div class="single-widget search-widget">
                    @using (Html.BeginForm("SearchResults", "Blog", FormMethod.Get.ToString()))
                    {
                        <div>
                            <label for="search">Tìm kiếm bài viết:</label>
                            @Html.TextBox("search")
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    }
                </div>

                <div class="single-widget protfolio-widget">
