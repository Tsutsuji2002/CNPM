@model IEnumerable<FindingJobWeb.Models.Blog_comment>

    <section class="comment-sec-area pt-80 pb-80">
        <div class="container">
            <div class="row flex-column">
                <h5 class="text-uppercase pb-80">@ViewBag.blogCount Bình luận</h5>
                <br>
                <div class="comment-list">
                    @foreach (var comment in Model)
                    {
                        <div class="single-comment justify-content-between d-flex">
                            <div class="user justify-content-between d-flex">
                                <div class="thumb">
                                    <img src="~/Resource/blog/userUK.png" alt="">
                                </div>
                                <div class="desc">
                                    <h5><a href="#">@comment.user_ID</a></h5>
                                    <p class="date">@comment.created_at</p>
                                    <p class="comment">
                                        @comment.Content
                                    </p>
                                </div>
                            </div>
                            <div class="reply-btn">
                                <a href="" class="btn-reply text-uppercase">Phản hồi</a>
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </section>
