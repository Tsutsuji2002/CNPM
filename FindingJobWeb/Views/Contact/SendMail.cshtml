
@{
    ViewBag.Title = "SendMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <div class="map-wrap" style="width:100%; height: 445px;" id="map"></div>
            <div class="col-lg-4 d-flex flex-column">
                <a class="contact-btns" href="#">Gửi CV của bạn</a>
                <a class="contact-btns" href="@Url.Action("Index", "Contact")">Gửi tin nhắn của bạn</a>
                <a class="contact-btns" href="#">Gửi email</a>
            </div>
            <div class="col-lg-8">
                <form action="/FileAndMail/SendMail" name="SendMail" class="form-area contact-form text-right" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <div>From: </div>
                            <input type="email" class="common-input mb-20 form-control" name="Form" required value="" />
                            <div>To: </div>
                            <input type="email" class="common-input mb-20 form-control" name="To" required value="" />
                            <div>Subject: </div>
                            <input type="text" class="common-input mb-20 form-control" name="Subject" required value="" />
                            <div>Notes: </div>
                            <textarea class="common-textarea mt-10 form-control" name="Notes" rows="4"></textarea>
                            <div>Attachment: </div>
                            <input type="file" class="common-input mb-20 form-control" name="Attachment">
                            <button type="submit" class="primary-btn mt-20 text-white" style="float: right;">Gửi</button>
                            <div class="mt-20 alert-msg" style="text-align: left;"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
