
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <div class="map-wrap" style="width:100%; height: 445px;" id="map"></div>
            <div class="col-lg-4 d-flex flex-column">
                <a class="contact-btns" href="#">Gửi CV của bạn</a>
                <a class="contact-btns" href="#">Gửi tin nhắn của bạn</a>
                <a class="contact-btns" href="@Url.Action("SendMail", "Contact")">Gửi email</a>
            </div>
            <div class="col-lg-8">
                <form method="post" class="form-area contact-form text-right" action="@Url.Action("SendMessage", "Contact")">
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label for="name">Tên:</label>
                            <input type="text" class="common-input mb-20 form-control" id="name" name="name" required placeholder="Enter your name">
                            <label for="email">Email:</label>
                            <input type="email" class="common-input mb-20 form-control" id="email" name="email" required placeholder="Enter your email">
                            <label for="subject">Chủ đề:</label>
                            <input type="text" class="common-input mb-20 form-control" id="subject" name="subject" required placeholder="Enter the subject">
                            <label for="message">Tin nhắn:</label>
                            <textarea class="common-textarea mt-10 form-control" id="message" name="message" rows="5" required placeholder="Enter your message"></textarea>
                            <button type="submit" class="primary-btn mt-20 text-white" style="float: right;">Gửi</button>
                            <div class="mt-20 alert-msg" style="text-align: left;"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End contact-page Area -->