@model FindingJobWeb.Models.Job

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<section class="post-area section-gap">
    <div class="container">
        <div class="row justify-content-center d-flex">
            <div class="content-header">
                <p>
                    <h2>Tạo mới</h2>
                </p>
            </div>
            <div class="joblist">
                @using (Html.BeginForm("Create", "Job", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <div class="mb-3">
                        <label for="name" class="form-label">Tên</label>
                        <input type="text" class="form-control" id="name" name="sName" required value="@ViewBag.Name">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="description" name="sDescription" rows="3">@ViewBag.Description</textarea>
                    </div>
                    <div class="mb-3">
                        <label for="qualification" class="form-label">Trình độ</label>
                        <input type="text" class="form-control" id="qualification" name="sQualification" required value="@ViewBag.Qualification">
                    </div>
                    <div class="mb-3">
                        <label for="experience" class="form-label">Kinh nghiệm</label>
                        <input type="number" class="form-control" id="experience" name="sExperience" required value="@ViewBag.Experience">
                    </div>
                    <div class="mb-3">
                        <label for="specialization" class="form-label">Chuyên môn</label>
                        <input type="text" class="form-control" id="specialization" name="sSpecialization" required value="@ViewBag.Specialization">
                    </div>
                    <div class="mb-3">
                        <label for="iCompanyID" class="form-label">Công ty</label>
                        <select name="iCompanyID" id="iCompanyID">
                            <option value="">Chọn công ty</option>
                            @if (ViewBag.Company != null)
                            {
                                foreach (var company in ViewBag.Company)
                                {
                                    <option value="@company.CompanyID">@company.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="iJobtypeID" class="form-label">Loại công việc</label>
                        <select name="iJobtypeID" id="iJobtypeID">
                            <option value="">Chọn loại công việc</option>
                            @if (ViewBag.TypeofJob != null)
                            {
                                foreach (var type in ViewBag.TypeofJob)
                                {
                                    <option value="@type.JobtypeID">@type.TypeName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="last_date_to_apply" class="form-label">Hạn cuối cùng nộp đơn</label>
                        <input type="date" class="form-control" id="last_date_to_apply" name="dtLastDatetoApply" required value="@ViewBag.LastDatetoApply" />
                    </div>
                    <div class="mb-3">
                        <label for="salary" class="form-label">Mức lương</label>
                        <input type="number" class="form-control" id="salary" name="sSalary" required value="@ViewBag.Salary">
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="Email" name="sEmail" value="@ViewBag.Email">
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="Address" name="sAddress" value="@ViewBag.Address">
                    </div>
                    <div class="mb-3">
                        <label for="Country" class="form-label">Tỉnh/thành</label>
                        <input type="text" class="form-control" id="Country" name="sCountry" value="@ViewBag.Country">
                    </div>
                    <button type="submit" class="btn btn-primary">Tạo</button>
                }
            </div>
        </div>
    </div>
</section>
